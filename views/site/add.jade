extends ../main

block main-content

    .add-site-page--wrap
        form(action="/site/save", method="post")
            .row
                .col-md-6.col-xs-12
                    .card
                        header.card-header Site
                        .add-site--content
                            .input-field
                                input#site_title.validate(type="text", name="site_title")
                                label(for="site_title") Title
                            .input-field
                                input#site_theme.validate(type="text", name="site_theme")
                                label(for="site_theme") Theme
                            p
                                input(name="site_menu_type", type="radio", id="menu_vert", value="vert", checked)
                                label(for="menu_vert") Vertical menu
                            p
                                input(name="site_menu_type", type="radio", id="menu_hor", value="gor")
                                label(for="menu_hor") Horizontal menu
                            .chips.chips-placeholder
                            input(type="hidden" name="user_id" value="{{user.id}}")
                            button.waves-effect.waves-light.btn(type="submit") Add

                .col-md-6.col-xs-12
                    .card
                        header.card-header Site pages
                        .add-site--content
                            .input-field
                                input#site_page1.validate(type="text", name="site_page1")
                                label(for="site_page1") Page 1
                            .layouts
                                span
                                    input(name="site_page1_layout", type="radio", id="site_page1_layout1", value="1", checked)
                                    label(for="site_page1_layout1") Layout 1
                                span
                                    input(name="site_page1_layout", type="radio", id="site_page1_layout2", value="2")
